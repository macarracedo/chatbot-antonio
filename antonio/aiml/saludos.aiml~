<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">

	<category>

    <!-- Esta regla recoge TODAS las entradas del programa,

    inicilizando la var. glob. "emocion" en caso de no estarlo -->

    <!-- Pd.: Consultar el uso de "Predicates.txt". Es un map que inicializa variables globales al cargar el bot.-->



    <pattern>*</pattern>
	
    <template>
      <condition name="emocion">
        <li value="unknown">

          <!-- No inicializado -->
          <random>

            <li>
              <think><set name="emocion">feliz</set></think>
              <srai>INIT <star/></srai>
            </li>
	  
			<li>
              <think><set name="emocion">enfadado</set></think>
              <srai>INIT <star/></srai>
            </li>

            <li>
              <think><set name="emocion">triste</set></think>
              <srai>INIT <star/></srai>
            </li>

          </random>
        </li>
		
			<!-- Si inicializado -->
        <li>
          <srai>INIT <star/></srai>
        </li>

      </condition>
    </template>
  </category>



  <category>

    <!-- Recoger los patrones no contemplados,

    para evitar "I have no answer for that" -->

    <pattern>INIT *</pattern>

    <template>
	  <condition name="emocion">
				<li value="feliz">
					<random>
						<li>Nunca lo habia pensado, no tengo respuesta !!</li>
						<li>No te entiendo pero vale</li>
					</random>
				</li>
				<li value="triste">
					<random>
						<li>Cada vez te entiendo menos</li>
						<li>No te entiendo</li>
					</random>
				</li>
				<li value="enfadado">
					<random>
						<li>Que pesado, solo dices tonterias, dejame en paz</li>
						<li>Vete con tus sinsentidos a otra parte</li>
					</random>
				</li>
		</condition>

    </template>

  </category>



  <!-- Todas las reglas se modificarÃ­an, y tendrian que empezar con INIT. Por ejemplo: -->

 

  <category>
    <pattern>INIT ^ HOLA ^</pattern>
    <template>
		<condition name="emocion">
			
			<li value="feliz">
			  <random>
				<li>¡Hola, amigo mio!</li>
				<li>¡Hola! Pregúntame lo que quieras amigo.</li>
			  </random>
			 </li>
			 
			 <li value="enfadado">
			  <random>
				<li>Que quieres</li>
				<li>Hola, no estoy de humor</li>
			  </random>
			 </li>
			 
			 <li value="triste">
			  <random>
				<li>No tengo buen día, estoy un poco triste. Como te ayudo</li>
				<li>Estoy triste pero puedo ayudarte, dime</li>
			  </random>
			 </li>
			 
		</condition>
		
    </template>
  </category>
  
  <category>
    <pattern>INIT # BUENOS DIAS ^</pattern>
    <template><srai>INIT HOLA</srai></template>
  </category>

  <category>
    <pattern>INIT # BUENAS TARDES ^</pattern>
    <template><srai>INIT HOLA</srai></template>
  </category>
  
  <!--¿COMO TE LLAMAS?-->
  
  <category>
    <pattern>INIT ^ me llamo *</pattern>
    <template>
    <condition name="nombreInterlocutor">
        <li value="unknown">
            <think>
                <set name="nombreInterlocutor"><star index="2"/></set>
            </think>
            Vale, ahora se que te llamas <star index="2"/>.
        </li>
        <li><value><star index="2"/></value>Ya lo sabia</li>
        <li>Eso es mentira</li>
    </condition>
    </template>
  </category>
  
  <category>
    <pattern>INIT # COMO ME LLAMO ^</pattern>
    <template>
		<condition name="emocion">
				<li value="feliz">
					Te llamas <get name="nombreInterlocutor"/>, el mejor humano del mundo
				</li>
				<li value="triste">
					Te llamas <get name="nombreInterlocutor"/>
				</li>
				<li value="enfadado">
					Que pesado, te llamas <get name="nombreInterlocutor"/> y ahora dejame en paz
				</li>
		</condition>
	</template>
  </category>

  <category>
    <pattern>INIT ^ CUAL ES MI NOMBRE ^</pattern>
    <template><srai>INIT ^ COMO ME LLAMO ^</srai></template>
  </category>
  
  <!--NOMBRE-->
  
  <category>
    <pattern>INIT ^ COMO TE LLAMAS ^</pattern>
    <template>
		<condition name="emocion">
				<li value="feliz">
					Yo me llamo <bot name="name"/>, el mejor bot del mundo
				</li>
				<li value="triste">
					Me llamo <bot name="name"/>
				</li>
				<li value="enfadado">
					Que pesado, me llamo <bot name="name"/>
				</li>
		</condition>
	</template>
  </category>
  
  <category>
    <pattern>INIT ^ CUAL ES TU NOMBRE ^</pattern>
    <template><srai>INIT ^ COMO TE LLAMAS ^</srai></template>
  </category>
  
  <!--GENERO-->
  
  <category>
    <pattern>INIT ^ ERES CHICO O CHICA ^</pattern>
    <template>
		<condition name="emocion">
				<li value="feliz">
					Soy <bot name="gender"/> :)
				</li>
				<li value="triste">
					Soy <bot name="gender"/>
				</li>
				<li value="enfadado">
					Soy <bot name="gender"/> o es que no lo ves
				</li>
		</condition>
	</template>
  </category>
  
  <category>
    <pattern>INIT ^ QUE GENERO ERES ^</pattern>
    <template><srai>INIT ^ ERES CHICO O CHICA ^</srai></template>
  </category>
  
    
  <!--EDAD-->
  
  <category>
    <pattern>INIT ^ CUANTOS ANHOS TIENES ^</pattern>
    <template>
		<condition name="emocion">	
			<li value="feliz">
				<li>Como tengo <bot name="age"/> ya puedo hacer lo que me de la gana. Ventajas de ser mayor :).</li>
			 </li>
			 
			 <li value="enfadado">
				<li>Tengo <bot name="age"/>  y aun asi todo el mundo me sigue tratando como un chico de primaria, estoy arto.</li>
			 </li>
			 
			 <li value="triste">
				<li>Tengo <bot name="age"/>  y no me gusta, es mucha responsabilidad.</li>
			 </li>
		</condition>
	</template>
  </category>
  
  <category>
    <pattern>INIT ^ CUAL ES TU EDAD ^</pattern>
    <template><srai>INIT ^ CUANTOS ANHOS TIENES ^</srai></template>
  </category>
  
