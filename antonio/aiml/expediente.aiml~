	<!-- learn fechas de examenes -->

	<category>
		<pattern>
			INIT cuando es el examen de <set>asignaturas</set>
		</pattern>
		<template>
			<think>
				<set var="fecha">
					<map name="examenes"><star/></map>
				</set>
			</think>
			<condition var="fecha">
				<li value="-">
					No lo sé, no lo tengo apuntado.
				</li>
				<li>
					Hay examen de <star/> el <get var="fecha"/>.
				</li>
			</condition>
		</template>
	</category>

	<category>
