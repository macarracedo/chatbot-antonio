<!-- GUSTOS -->
<!-- Regla 12 -->
<category>
<pattern>INIT ^ me gusta *</pattern>
<template>
		<learn>
			<category>
			<pattern>
				INIT ^ me gusta <eval><star index="2"/></eval>
			</pattern>
			<template>
				Si, si que te gusta
			</template>               
			</category>
		</learn>
			Vale, ahora se que te gusta <star index="2"/>.
</template>
</category>

<!-- Regla 13 -->
<category>
<pattern>INIT ^ no me gusta *</pattern>
<template>
		<learn>
			<category>
			<pattern>
				INIT ^ no me gusta <eval><star index="2"/></eval>
			</pattern>
			<template>
				no, no te gusta
			</template>               
			</category>
		</learn>
			Vale, ahora se que no te gusta <star index="2"/>.
</template>
</category>


